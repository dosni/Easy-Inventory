@page "/unit"
@using ServiceLayer.Model;
@using ServiceLayer.ProductUnitServices.Concrete;
@using ServiceLayer.ProductUnitServices;

<PageTitle>UnitList</PageTitle>

@inject UnitServices _unitServices

<FluentHeader Style="background-color:none">
    <h3>Units</h3>
    <FluentSpacer />
    <FluentButton OnClick="@(() => GetLink())" Appearance="Appearance.Accent">New</FluentButton>
</FluentHeader>
@if (IsLoading == true)
{
    <div style="width: 300px; display: grid; grid-gap: 12px; grid-auto-flow: column;">
        <FluentProgress></FluentProgress>
    </div>
}
@if (cats != null)
{
    <FluentDataGrid Items="@cats" ResizableColumns=true GridTemplateColumns="0.4fr 0.6fr 0.3fr 0.3fr"
                    style="height: 580px;overflow:auto;">

        <PropertyColumn Property="@(c => c.UnitId)" Title="Unit Id" Align="Align.Start" Sortable="true" />
        <PropertyColumn Property="@(c => c.Unit)" Title="Unit" Align="Align.Start" Sortable="true" />

        <TemplateColumn Title="Actions">
            <FluentButton IconStart="@(new Icons.Regular.Size20.Edit())" BackgroundColor="var(--highlight-bg)" Color="var(--error)" Appearance="Appearance.Filled" Title="Edit" OnClick="@(() => Edit(context.UnitId,context.Unit))" />
            <FluentButton IconStart="@(new Icons.Regular.Size20.Delete())" Appearance="Appearance.Filled" BackgroundColor="#ff531a" Color="var(--danger)" Title="Hapus" OnClick="@(() => Delete(context.UnitId,context.Unit))" />
        </TemplateColumn>
    </FluentDataGrid>

}


@code {
    private bool IsLoading { get; set; } = false;
    IQueryable<UnitDto>? cats;
    bool? canceled;

    protected override async Task OnInitializedAsync()
    {

        base.OnInitialized();
        await Loading();

    }
    private async Task Loading()
    {
        IsLoading = true;
        await Task.Delay(200);
        cats = (await _unitServices.GetUnitListAsycn()).AsQueryable();
        IsLoading = false;

    }
    private void GetLink()
    {
        _navman.NavigateTo("/unitCreate");
    }
    private async void Edit(int Id, string cat)
    {
        _navman.NavigateTo($"unitUpdate/{Id}/{cat}");

    }
    private async void Delete(int Id, string cat)
    {
        try
        {
            var dialog = await _dialogService.ShowConfirmationAsync("Are you sure you want to Delete?", "Ok", "No", "Delete Data");
            var dlgresult = await dialog.Result;

            canceled = dlgresult.Cancelled;

            if (canceled == null || (canceled == true))
            {
                _dialogService.ShowInfo("Delete cancelled", "Delete");
                return;
            }


            IsLoading = true;
            await Task.Delay(200);
            ServiceResponseDTO<bool> result = new();
            result = await _unitServices.DeleteUnitAsync(Id);
            IsLoading = false;
            if (result.Success == true)
            {
                _dialogService.ShowInfo(result.Message, "Delete");
            }
            else
            {
                _dialogService.ShowWarning(result.Message, "Delete");
            }
            result = new();
            await Loading();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            string msg = ex.Message;
            IsLoading = false;
            return;
        }

    }
}
